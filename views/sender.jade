doctype 5
html
  head
    title Sender :: Sending file without saving on the server.
    link(rel='stylesheet', href='/css/style.css')
  body
    #uploadbox
      h2 Send the file:
      span#uploadarea
        label(for="filebox") Select file:
        input#filebox(type="file")
        br
        button#uploadbutton.btn(type='button') Send


    script(src='//code.jquery.com/jquery-1.9.1.min.js')
    script(src='/socket.io/socket.io.js')
    div.config(socketUrl='#{socketUrl}')
    script(src='/js/script.js')
